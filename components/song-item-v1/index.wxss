/* components/song-item-v1/index.wxss */
.item{
  display: flex;
  padding: 20rpx 0;
}

.item .image{
  width: 150rpx;
  border-radius: 20rpx;
}

.item .content{
  flex: 1;
  padding: 5rpx 20rpx;
  padding-right: 0;

  display: flex;
  justify-content: space-between;
  align-items: center;
}
.item .content .text{
  display: flex;
  height: 100%;
  flex-direction: column;
  justify-content: space-around;
}
.item .content .text1{
  font-weight: 700;
}
.item .content .text2{
  color: #999;
  font-size: 24rpx;
}


.item .content .image{
  width: 60rpx;
  height: 60rpx;
}