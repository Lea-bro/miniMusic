/* components/video-item-v2/index.wxss */
.item{
  width: 100%;
  display: flex;
  align-items: center;
  padding: 15rpx 0;

}
.item .image{
  width: 280rpx;
}
.item .top {
  position: relative;
}
.item .icon{
  width: 35rpx;
  height: 25rpx;
  margin: 0 8rpx;
}
.item .duration{
  color: #ffffff;
  font-size: 28rpx;
  position:absolute;
  bottom: 10rpx;
  right: 16rpx;
  z-index: 1;
}
.item .info{
  flex: 1;
  padding-left: 20rpx;
  position: relative;
  height: 156rpx;
}
.item .info .title{
  font-size: 30rpx;
  font-weight: 550;

  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp:2 ;
  -webkit-box-orient: vertical;
  word-wrap: break-word;
  word-break: break-all;
  white-space:normal;
  overflow: hidden;
}
.item .info .authName{
  font-size: 27rpx;
  color: #666;
  position: absolute;
  bottom: 15rpx;
  left: 20rpx;
}
