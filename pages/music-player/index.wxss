/* pages/music-player/index.wxss */
.bg-image,.bg-glass{
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
}
.bg-glass{
  background-color: rgba(0,0,0,.5);
  backdrop-filter: blur(30px);
}

/* 自定义导航 */
.tab{
  display: flex;
  font-size: 28rpx;
  color:#999;
}
.tab .divider{
  margin:0 10rpx;
}

/* 内容 */
.content{
  color: #fff; 
}

.content .music{
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  box-sizing: border-box;
  padding: 30rpx 50rpx;
}
.music .album{
  display: flex;
  align-items: center;
  justify-content: center;
  flex: 5;
}
.album .album-image{
  width: 80%;
  border-radius: 100%;
  /* border:16rpx solid #000; */
  /* border-radius: 12rpx; */
}
.music .info{
  margin: 20rpx 0;
}
.music .info .title {
  font-size: 48rpx;
  font-weight: 700;
}
.music .info .detail .detail-text{
  font-size: 26rpx;
  color: #ccc;
  margin: 16rpx 0;
}
.music .lyric{
  display: flex;
  align-items: center;
  justify-content: center;
  height: 90rpx;
  font-size: 28rpx;
  color: #0f0;
}
.music .progress{
  margin: 10rpx 0;
}
.slider{
  margin: 10rpx 2rpx 10rpx 14rpx;
}
.music .opperation{
  margin: 0 0 18rpx 20rpx;
}
.time {
  display: flex;
  justify-content: space-between;
  color: #ccc;
  font-size: 22rpx;
}
.time .current {
  margin-left: 10rpx;
}

.operation {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 20rpx 0 60rpx;
}
.operation .btn {
  display: inline-block;
  width: 60rpx;
  height: 60rpx;
  padding: 0;
}
.operation .btn-mode {
  width: 80rpx;
  height: 80rpx;
}
.operation .btn-pause {
  width: 130rpx;
  height: 130rpx;
}

/* 分页歌词 */
.scroll-view{
  height: 100%;
  box-sizing: border-box;
  overflow: hidden;
}
/* ::-webkit-scrollbar{
  width: 0;
  height: 0;
  color: transparent;
} */
.scroll-view .item{
  height: 35px;
  font-size: 28rpx;
  color: #989898;
  display: flex;
  justify-content: center;
  align-items: center;

  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
